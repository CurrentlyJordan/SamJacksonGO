<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.jordansmith.samjacksongo.EditScreenActivity">
    <EditText
        android:id="@+id/edit_screen_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write new name here!"/>
    <Button
        android:background="@drawable/button_shape"
        android:id="@+id/edit_screen_edit_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Save Changes"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="5dp"/>


</LinearLayout>
