<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.jordansmith.samjacksongo.DetailScreenActivity">
    <ImageView
        android:id="@+id/detail_screen_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/detail_screen_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/detail_screen_movie_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/detail_screen_quote_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
    <Button
        android:background="@drawable/button_shape"
        android:id="@+id/change_name_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Edit This Sam"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="5dp"
        />

</LinearLayout>
